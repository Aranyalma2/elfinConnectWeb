<!-- views/register.ejs -->
<%- include('frameTop') -%>

<section>
  <div class="container justify-content-center align-items-center">
    <div class=" col-md-4">
      <div class="login-form">
        <h2>Register new user</h2>
        <% if (typeof error !=='undefined' ) { %>
        <p class="alert alert-danger"><%= error %></p>
        <% } %> <% if (typeof success !=='undefined' ) { %>
        <p class="alert alert-success"><%= success %></p>
        <% } %> <% if (typeof warning !=='undefined' ) { %>
        <p class="alert alert-warning"><%= warning %></p>
        <% } %>
        <form action="/register" method="post">
          <div class="mb-3 form-group">
            <label for="username">Username:</label>
            <input type="text" name="username" class="form-control" id="username" required />
          </div>
          <div class="mb-3 form-group">
            <label for="password">Password:</label>
            <input type="password" name="password" class="form-control" id="password" required />
          </div>
          <div class="mb-3 form-group form-check form-switch">
            <input class="form-check-input" type="checkbox" id="admin" name="admin" <% if (typeof forceAdminRegistration !=='undefined' ) { %> checked disabled <% }
				%> />
            <label class="form-check-label" for="admin">Register administrator profile </label>
          </div>
          <button type="submit" class="btn btn-primary">Register</button>
        </form>
      </div>
    </div>
  </div>
</section>
<%- include('frameBottom') -%>